{% extends 'base.html.twig' %}

{% block title 'Add a new movie !' %}

{% block main %}
    <div class="row g-5 py-5">
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Add a movie</h4>
            {{ form_start(movie_form) }}
            {{ form_widget(movie_form) }}
            <hr class="my-4" />
